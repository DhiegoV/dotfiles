# modifier
	set $mod Mod4

# font config 
	# Font for window titles. Will also be used by the bar unless a different font
	# is used in the bar {} block below.
	font pango:inconsolata 11

	# This font is widely installed, provides lots of unicode glyphs, right-to-left
	# text rendering and scalability on retina/hidpi displays (thanks to pango).
	#font pango:DejaVu Sans Mono 8

	# Before i3 v4.8, we used to recommend this one as the default:
	# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
	# The font above is very space-efficient, that is, it looks good, sharp and
	# clear in small sizes. However, its unicode glyph coverage is limited, the old
	# X core fonts rendering does not support right-to-left and this being a bitmap
	# font, it doesn’t scale on retina/hidpi displays.

# floating modifier
	# Use Mouse+$mod to drag floating windows to their wanted position
	floating_modifier $mod

# running programs on startup
	# swapping caps lock with esc
		exec --no-startup-id setxkbmap -option "caps:swapescape"
	# setting the wallpaper
		exec_always --no-startup-id wal -i $./wallpaper.*
		# exec --no-startup-id feh --image-bg black --bg-max '$./100218spark.jpeg'
# terminal config
	set $defaultTerminal urxvt
	set $runInDefaultTerminal urxvt -e
	# start the default terminal
		bindsym $mod+Return exec $defaultTerminal

# launching programs
	# start dmenu (a program launcher)
	# bindsym $mod+d exec dmenu_run
	bindsym $mod+Shift+d exec --no-startup-id rofi -show run
	
	# There also is the (new) i3-dmenu-desktop which only displays applications
	# shipping a .desktop file. It is a wrapper around dmenu, so you need that
	# installed.
	bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu='rofi -dmenu -i -p ""'

# change focus
	bindsym $mod+h focus left
	bindsym $mod+j focus down
	bindsym $mod+k focus up
	bindsym $mod+l focus right
	# alternatively, you can use the cursor keys:
		bindsym $mod+Left focus left
		bindsym $mod+Down focus down
		bindsym $mod+Up focus up
		bindsym $mod+Right focus right

# move focused window
	bindsym $mod+Shift+h move left
	bindsym $mod+Shift+j move down
	bindsym $mod+Shift+k move up
	bindsym $mod+Shift+l move right
	# alternatively, you can use the cursor keys:
		bindsym $mod+Shift+Left move left
		bindsym $mod+Shift+Down move down
		bindsym $mod+Shift+Up move up
		bindsym $mod+Shift+Right move right

# modes
	# mode variable
	set $and_exit_mode , mode default
	
	# window controls
		set $winmode "window controls"
		bindsym $mod+w mode $winmode
		mode $winmode {
			# split
				# horizontally
					bindsym h split h $and_exit_mode
				# vertically
					bindsym v split v $and_exit_mode

			# showing/hiding the title
				bindsym t border normal $and_exit_mode
				bindsym Shift+t border pixel 2 $and_exit_mode

			# enter fullscreen mode for the focused container
				bindsym Shift+f fullscreen toggle $and_exit_mode

			# change container layout (stacked, tabbed, toggle split)
				bindsym s layout stacking $and_exit_mode
				bindsym t layout tabbed $and_exit_mode
				bindsym Shift+t layout toggle split $and_exit_mode

			# toggle tiling / floating
				bindsym f floating toggle $and_exit_mode

			# kill focused window
				bindsym k kill $and_exit_mode

			# back to default mode
				bindsym Escape mode "default"
			}
	# focus 
		set $focusmode "focus"
		bindsym $mod+f mode $focusmode
		mode $focusmode {
			# change focus between tiling / floating windows
				bindsym f focus mode_toggle $and_exit_mode
			
			# focus the parent container
				bindsym p focus parent $and_exit_mode
			
			# focus the child container
				bindsym c focus child $and_exit_mode
						
			# back to default mode
				bindsym Escape mode "default"
			}
	# i3-related commands 
		set $i3mode "i3-related commands"
		bindsym $mod+i mode $i3mode
		mode $i3mode {
			# reload the configuration file
				bindsym l reload $and_exit_mode
			
			# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
				bindsym s restart $and_exit_mode
			
			# exit i3 (logs you out of your X session)
				bindsym e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'" $and_exit_mode
			
			# back to default mode
				bindsym Escape mode "default"
			}
	# resize
		bindsym $mod+r mode "resize"
		mode "resize" {
			# Pressing left will shrink the window’s width.
			# Pressing right will grow the window’s width.
			# Pressing up will shrink the window’s height.
			# Pressing down will grow the window’s height.
			bindsym h resize shrink width 10 px or 10 ppt
			bindsym j resize grow height 10 px or 10 ppt
			bindsym k resize shrink height 10 px or 10 ppt
			bindsym l resize grow width 10 px or 10 ppt

			# same bindings, but for the arrow keys
				bindsym Left resize shrink width 10 px or 10 ppt
				bindsym Down resize grow height 10 px or 10 ppt
				bindsym Up resize shrink height 10 px or 10 ppt
				bindsym Right resize grow width 10 px or 10 ppt
			
			# back to normal: Enter or Escape
				bindsym Return mode "default"
				bindsym Escape mode "default"
			}
	# open window
		bindsym $mod+x mode "open window"
		mode "open window" {
			bindsym r exec $runInDefaultTerminal ranger $and_exit_mode
			bindsym s exec spotify $and_exit_mode
			bindsym f exec firefox $and_exit_mode
			bindsym q exec qutebrowser , mode "default" $and_exit_mode
			# back to normal: Escape
				bindsym Escape mode "default"
			}

# workspaces
	set $workspace8 "8: firefox"
	set $workspace9 "9: music"
	set $workspace10 "10: qutebrowser"
	# switch to workspace
		bindsym $mod+1 workspace 1
		bindsym $mod+2 workspace 2
		bindsym $mod+3 workspace 3
		bindsym $mod+4 workspace 4
		bindsym $mod+5 workspace 5
		bindsym $mod+6 workspace 6
		bindsym $mod+7 workspace 7
		bindsym $mod+8 workspace $workspace8
		bindsym $mod+9 workspace $workspace9
		bindsym $mod+0 workspace $workspace10
	# move focused container to workspace
		bindsym $mod+Shift+1 move container to workspace 1
		bindsym $mod+Shift+2 move container to workspace 2
		bindsym $mod+Shift+3 move container to workspace 3
		bindsym $mod+Shift+4 move container to workspace 4
		bindsym $mod+Shift+5 move container to workspace 5
		bindsym $mod+Shift+6 move container to workspace 6
		bindsym $mod+Shift+7 move container to workspace 7
		bindsym $mod+Shift+8 move container to workspace $workspace8
		bindsym $mod+Shift+9 move container to workspace $workspace9
		bindsym $mod+Shift+0 move container to workspace $workspace10
	# assigning windows to specific workspaces
		assign [class="Firefox"] $workspace8
		assign [class="qutebrowser"] $workspace10
		for_window [class="Spotify"] move to workspace $workspace9

# main system controls
	# variables
		set $. ~/.config/i3
	# Pulse Audio controls
		# move the open programs' audio to the defined sink
			bindsym $mod+Shift+s exec --no-startup-id $./scripts/movesinks 0
			bindsym $mod+Shift+f exec --no-startup-id $./scripts/movesinks 1
		# increase volume
			bindsym $mod+F3 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% 
		# decrease volume
			bindsym $mod+F2 exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% 
		# mute sound
			bindsym $mod+F1 exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
	# screen brightness controls
		# increase
			bindsym $mod+F12 exec --no-startup-id light -A 2
		# decrease
			bindsym $mod+F11 exec --no-startup-id light -U 2
	# touchpad controls
		bindsym $mod+space exec --no-startup-id $./scripts/toggletouchpad
	# wifi control
		bindsym $mod+Insert exec --no-startup-id $./scripts/togglewifi
	# media player controls
		bindsym $mod+F5 exec playerctl play-pause
		bindsym $mod+F4 exec playerctl previous
		bindsym $mod+F6 exec playerctl next

# gaps
	# variables
		set $innergap 8
		set $outergap 64
		set $innergap_crement 4
		set $outergap_crement 32
	# default gap sizes
		gaps inner $innergap
		gaps outer $outergap
	# no border when there are no gaps
		smart_borders no_gaps
	# controls
		# reseting
			bindsym $mod+Control+minus gaps inner current set 0 , gaps outer current set 0
			bindsym $mod+Control+equal gaps inner current set $innergap , gaps outer current set $outergap
		# inner gaps
			bindsym $mod+equal gaps inner current plus $innergap_crement
			bindsym $mod+minus gaps inner current minus $innergap_crement
		# outer gaps
			bindsym $mod+Shift+equal gaps outer current plus $outergap_crement
			bindsym $mod+Shift+minus gaps outer current minus $outergap_crement
	# workspace-specific gaps
		workspace $workspace9 gaps outer 0
		workspace $workspace9 gaps inner 0

# borders
	# for new windows
		new_window pixel 2

# colors
	set $border #6702db
	set $indicador #1204db
	set $text #eeeeee
	set $inactive #262626

	# class          border	   backgr.   text  indicator  child_border
	client.focused   $border   $border   $text $indicador $border
	client.unfocused $inactive $inactive $text $inactive  $inactive

# i3bar
	# Start i3bar to display a workspace bar (plus the system information i3status
	# finds out, if available)
	bar	{
		status_command i3status
		}
